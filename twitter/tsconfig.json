{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["dom", "esnext", "dom.iterable"],
    "outDir": "build",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "assets/*": ["assets/*"],
      "public/*": ["public/*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "store/*": ["store/*"],
      "constants/*": ["constants/*"],
      "hooks/*": ["hooks/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"],
      "tests/*": ["tests/*"],
      "styled/*": ["styled/*"],
      "hocs/*": ["hocs/*"],
      "api/*": ["api/*"],
   }
  },
  "include": ["src",  "src/typings/theme.d.ts", "setup.ts"],
  "exclude": [
      "node_modules",
      "dist",
  ]  
}
